{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "source": "/(.*)",
      "destination": "backend/server.js"
    },
    {
      "source": "/(.*\\.[^/]+)",
      "destination": "frontend/dist/$1"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/dist/index.html"
    }
  ]
}