{
    "installCommand": "npm install --legacy-peer-deps",
    "version": 2,
    "builds": [
        {
        "src": "backend/api/index.js",
        "use": "@vercel/node"
        },
        {
        "src": "dist/**",
        "use": "@vercel/static-build"
        }
    ],
     "routes": [
        {
      "src": "/api/(.*)",
      "dest": "backend/api/index.js"
    },
    {
      "src": "/(.*\\.[^/]+)",
      "dest": "dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
    ]
}