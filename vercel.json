{
    "version": 2,
    "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
],
    "rewrites": [
    {
      "source": "/(.*)",
      "destination": "backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/dist/index.html"
    }
  ],
    "buildCommand": "npm run build --prefix frontend"
}